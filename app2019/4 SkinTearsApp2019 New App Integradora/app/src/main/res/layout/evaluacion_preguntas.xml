<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".activities.evaluaciones.PreguntasEvaluacion">


    <LinearLayout
        android:id="@+id/layout_actividad_principal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/layout_texto"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#ffffff"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtPreInicial_"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="Arial"
                android:text="@string/pregunta"
                android:textSize="17sp"
                android:typeface="serif" />
        </LinearLayout>

        <GridLayout
            android:id="@+id/layout_respuestas"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:columnCount="1"
            android:orientation="horizontal"
            android:rowCount="3">

            <ImageView
                android:id="@+id/imgPregunta"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp" />

            <Button
                android:id="@+id/btnOpcion1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/estilo_borde_redondo"
                android:text="RESPUESTA 1"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="visible" />


            <Button
                android:id="@+id/btnOpcion2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/estilo_borde_redondo"
                android:text="RESPUESTA 2"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="visible" />


            <Button
                android:id="@+id/btnOpcion3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/estilo_borde_redondo"
                android:text="RESPUESTA 3"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="visible" />


            <Button
                android:id="@+id/btnOpcion4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/estilo_borde_redondo"
                android:text="RESPUESTA 4"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="visible" />

        </GridLayout>
    </LinearLayout>
</RelativeLayout>
