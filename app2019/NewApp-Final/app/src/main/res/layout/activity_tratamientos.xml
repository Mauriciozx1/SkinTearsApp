<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:orientation="vertical">


    <TextView
        android:id="@+id/Text_Trat1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="30dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Guideline: Assessment, Prevention and Treatment of Skin Tears"
        android:textSize="16sp" />


    <Button
        android:id="@+id/open_pdf_pdftron1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Text_Trat1"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/estilo_borde_redondo"
        android:text="@string/open_pdf_pdftron"
        android:textAllCaps="false" />


    <TextView
        android:id="@+id/Text_Trat2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/open_pdf_pdftron1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="30dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="International Skin Tear Advisory Panel: A Tool Kit to Aid in the Prevention, Assessment, and Treatment of Skin Tears Using a Simplified Classification System"
        android:textSize="16sp" />


    <Button
        android:id="@+id/open_pdf_pdftron2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Text_Trat2"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/estilo_borde_redondo"
        android:text="@string/open_pdf_pdftron"
        android:textAllCaps="false" />


</RelativeLayout>