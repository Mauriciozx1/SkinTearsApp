<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:orientation="vertical">


    <TextView
        android:id="@+id/Text_Rec1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="30dp"
        android:ellipsize="end"
        android:gravity="start"
        android:lines="9"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:singleLine="false"
        android:text="@string/reconocimientoInstrucciones"
        android:textSize="16dp" />


    <Button
        android:id="@+id/btn_compartir"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Text_Rec1"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/estilo_borde_redondo"
        android:text="@string/reconocimiento"
        android:textAllCaps="false" />


</RelativeLayout>